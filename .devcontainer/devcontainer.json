// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/typescript-node
{
  "name": "CATcher-development",
  // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
  "image": "mcr.microsoft.com/devcontainers/typescript-node:1-16-bookworm",
  "workspaceMount": "source=${localWorkspaceFolder},target=/CATcher,type=bind",
  "workspaceFolder": "/CATcher", // Set the workspace folder
  "mounts": [
    {
      "source": "catcher-development_catcher_node_modules", // This hides the node_modules folder in the workspace
      "target": "/CATcher/node_modules", // Mount to the node_modules folder
      "type": "volume"
    }
  ],
  "runArgs": [
    "--name=CATcher-development" // Set the container name
  ],
  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  "forwardPorts": [
    4200, // Angular browser port
    9876 // Karma port
  ],
  // Use 'postCreateCommand' to run commands after the container is created.
  // "postCreateCommand": "yarn install",
  "postCreateCommand": "bash /CATcher/.devcontainer/setup_chrome.sh", // Run the setup script
  // Configure tool-specific properties.
  "customizations": {
    "vscode": {
      "extensions": ["graphql.vscode-graphql-syntax", "ms-playwright.playwright", "esbenp.prettier-vscode"]
    }
  }
  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  // "remoteUser": "root"
}
